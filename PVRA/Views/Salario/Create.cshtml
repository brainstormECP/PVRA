@model PVRA.Models.Salario

@{
    ViewBag.Title = "Agregar";
}

<div class="container">
    <div class="panel panel-form col-md-5">
        <h2>Agregar Salario</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.Fecha, new { @class = "control-label col-md-3" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(model => model.Fecha, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Fecha, "Debe ser una Fecha válida")
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TrabajadorPersonaId, "Trabajador", new { @class = "control-label col-md-3" })
                    <div class="col-md-7">
                        @Html.DropDownList("TrabajadorPersonaId", null, new { @class = "chzn-select col-md-9" })
                        @Html.ValidationMessageFor(model => model.TrabajadorPersonaId)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Importe, new { @class = "control-label col-md-3" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(model => model.Importe, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Importe)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-7">
                        <input type="submit" value="Crear" class="btn btn-success" />
                        @Html.ActionLink("Atras", "Index", null, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#Fecha').datepicker({ format: "dd/mm/yyyy" });
            $('.chzn-select').chosen();
        });
    </script>
}
