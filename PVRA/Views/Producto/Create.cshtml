@model PVRA.Models.Producto

@{
    ViewBag.Title = "Agregar";
}

<div class="container">
    <div class="panel panel-form col-md-5">
        <h2>Agregar Producto</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, new { @class = "control-label col-md-3" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Nombre)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Modelo, new { @class = "control-label col-md-3" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(model => model.Modelo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Modelo)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Talla, "Talla", new { @class = "control-label col-md-3" })
                    <div class="col-md-7">
                        @Html.DropDownList("Talla", null, new { @class = "chzn-select col-md-9" })
                        @Html.ValidationMessageFor(model => model.Talla)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Descripcion, new { @class = "control-label col-md-3" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Descripcion)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-7">
                        <input type="submit" value="Crear" class="btn btn-success" />
                        @Html.ActionLink("Atras", "Index", null, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
    $(document).ready(function () {
        $('.chzn-select').chosen();
    });
</script>

}