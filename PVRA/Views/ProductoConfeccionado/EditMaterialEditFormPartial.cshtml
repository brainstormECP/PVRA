@model PVRA.Models.BaseTemporal.MaterialesUtilizados

@using (Html.BeginForm("EditMaterialesEdit", "ProductoConfeccionado", new { ProductoConfeccionadoId = @ViewBag.ProductoConfeccionadoId }, FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.HiddenFor(model => model.InvertarioMaterialesId)
            @Html.DisplayFor(model => model.InvertarioMateriales.InventarioCorto)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Cantidad, new { @class = "form-control", @placeholder = "Cantidad" })
            @Html.ValidationMessageFor(model => model.Cantidad)
        </div>
        <div class="form-group">
            <input type="submit" value="Crear" class="btn btn-success" />

            @Html.ActionLink("Cancelar", "CancelarEditarMateriales", "ProductoConfeccionado", new { ProductoConfeccionadoId = @ViewBag.ProductoConfeccionadoId }, new { @class = "btn btn-default" })
            @*@Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })*@
        </div>
    </div>
}
