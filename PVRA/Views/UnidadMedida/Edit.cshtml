@model PVRA.Models.UnidadMedida

@{
    ViewBag.Title = "Editar";
}

<div class="container">
    <div class="panel panel-form col-md-5">
        <h2>Editar</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Unidad de Medida</h4>
                <hr />
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.Unidad, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Unidad, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Unidad)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Siglas, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Siglas, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Siglas)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                        @Html.ActionLink("Atras", "Index", null, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
