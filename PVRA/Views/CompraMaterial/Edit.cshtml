@model PVRA.Models.CompraMateriales

@{
    ViewBag.Title = "Editar";
}

<div class="container">
    <div class="panel panel-form col-md-5">
        <h2>Editar</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Compra de Materias Primas</h4>
                <hr />
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.Fecha, new { @class = "control-label col-md-3" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(model => model.Fecha,@"{0:dd/MM/yyyy}", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Fecha, "Debe ser una Fecha válida")
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MateriaPrimaId, "Materia Prima", new { @class = "control-label col-md-3" })
                    <div class="col-md-7">
                        @Html.DropDownList("MateriaPrimaId", null, new { @class = "chzn-select col-md-9" })
                        @Html.ValidationMessageFor(model => model.MateriaPrimaId)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ColorId, "Color", new { @class = "control-label col-md-3" })
                    <div class="col-md-7">
                        @Html.DropDownList("ColorId", null, new { @class = "chzn-select col-md-9" })
                        @Html.ValidationMessageFor(model => model.ColorId)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Cantidad, new { @class = "control-label col-md-3" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(model => model.Cantidad, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Cantidad)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Importe, new { @class = "control-label col-md-3" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(model => model.Importe, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Importe)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ProveedorPersonaId, "Proveedor", new { @class = "control-label col-md-3" })
                    <div class="col-md-7">
                        @Html.DropDownList("ProveedorPersonaId", null, new { @class = "chzn-select col-md-9" })
                        @Html.ValidationMessageFor(model => model.ProveedorPersonaId)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Observacion, new { @class = "control-label col-md-3" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(model => model.Observacion, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Observacion)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                        @Html.ActionLink("Atras", "Index", null, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#Fecha').datepicker({ format: "dd/mm/yyyy" });
            $('.chzn-select').chosen();
        });
    </script>
}
