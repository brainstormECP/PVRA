@model IEnumerable<PVRA.Models.Producto_Material>
<div class="form-group">
    @{
    var index = 0;
    index = ViewBag.ProductoId;
}
    @Html.ActionLink("Agregar Material", "Create", new { Id = index }, new { @class = "btn btn-info" })
</div>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Material)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Material.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.ProductoId, materialId = item.MateriaPrimaId }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.ProductoId, materialId = item.MateriaPrimaId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

