@model PVRA.Models.Producto_Material

@{
    ViewBag.Title = "Editar";
}

<div class="container">
    <div class="panel panel-form col-md-5">
        <h2>Editar</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Materias primas de producto</h4>
                <hr />
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.ProductoId)

                @Html.HiddenFor(model => model.MateriaPrimaId)

                <div class="form-group">
                    @Html.LabelFor(model => model.Cantidad, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Cantidad, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Cantidad)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                        @Html.ActionLink("Atras", "Index", new{Id = Model.ProductoId}, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
    $(document).ready(function () {
        $('.chzn-select').chosen();
    });
</script>
}
