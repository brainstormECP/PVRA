@model PVRA.Models.Producto_Material

@{
    ViewBag.Title = "Eliminar";
}

<div class="container">
    <div class="panel panel-form col-md-7">
        <h2>Eliminar</h2>

        <h3>Esta seguro que desea Eliminar este registro?</h3>
        <div>
            <h4>Materias Primas de Productos</h4>
            <hr />
            <dl class="dl-horizontal">
                

                <dt>
                    @Html.DisplayNameFor(model => model.Producto)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Producto.DescripcionCompleta)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.MateriaPrimaId)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MateriaPrimaId.DescripcionCompleta)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Cantidad)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Cantidad)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Borrar" class="btn btn-danger" /> |
                    @Html.ActionLink("Atras", "Index", new { Id = Model.ProductoId }, new { @class = "btn btn-default" })
                </div>
            }
        </div>
    </div>
</div>
