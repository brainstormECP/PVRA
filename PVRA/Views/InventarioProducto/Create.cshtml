@model PVRA.Models.InvertarioProductos

@{
    ViewBag.Title = "Agregar";
}

<div class="container">
    <div class="panel panel-form col-md-7">
        <h2>Agregar Inventario de Producto</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Invertario de Productos</h4>
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.ProductoId, "Producto", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("ProductoId")
                        @Html.ValidationMessageFor(model => model.ProductoId)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ColorId, "Color", new { @class = "control-label col-md-3" })
                    <div class="col-md-7">
                        @Html.DropDownList("ColorId", null, new { @class = "chzn-select col-md-9" })
                        @Html.ValidationMessageFor(model => model.ColorId)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CostoUnitario, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.CostoUnitario, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CostoUnitario)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Existencia, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Existencia, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Existencia)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Descripcion, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Descripcion)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Crear" class="btn btn-success" />
                        @Html.ActionLink("Atras", "Index", null, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
