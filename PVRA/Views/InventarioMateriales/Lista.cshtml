@model IEnumerable<PVRA.Models.InvertarioMateriales>

@{
    ViewBag.Title = "Inventario";
}

<div class="container">
    <div class="panel panel-form col-md-9">
        <h2>Inventario de Materias Primas</h2>

        <table class="table table-bordered table-striped dynamic">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Material)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Color)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Precio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Existencia)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Material.DescripcionCompleta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Color.DescricionCompleta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Precio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Existencia)
                            @Html.DisplayFor(modelItem => item.Material.UnidadMedida.Siglas)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>